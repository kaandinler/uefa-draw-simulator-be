# Application
APP_NAME="UEFA Draw API"
APP_VERSION="1.0.0"
DEBUG=False

# API
API_V1_STR="/api/v1"
PROJECT_NAME="UEFA Competition Draw System"

# Database
DATABASE_URL="sqlite+aiosqlite:///./uefa_draw.db"
# For PostgreSQL:
# DATABASE_URL="postgresql+asyncpg://user:password@localhost/dbname"

# Docker Database Configuration
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="your-secure-password-here"
POSTGRES_DB="uefa_draw"

# CORS
BACKEND_CORS_ORIGINS='["http://localhost:3000", "http://localhost:8000", "https://localhost:3000", "https://localhost:8000"]'

# Security
SECRET_KEY="your-secret-key-here-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis (optional)
REDIS_URL="redis://redis:6379"

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL="admin@example.com"
PGADMIN_DEFAULT_PASSWORD="your-secure-admin-password"

# External APIs
UEFA_API_BASE_URL="https://api.uefa.com"
# UEFA_API_KEY="your-api-key"

# Logging
LOG_LEVEL="INFO"
